<div style="border: 1px solid black; display: flex; 
justify-content: space-between; padding: 2%; margin: 1%">
	<h1><%= @user.name %></h1>
	<p>Number of posts <%= @user.post_counter %></p>
</div>

<div style="border: 2px solid #111; display: flex;
flex-direction: column; justify-content: space-between; padding: 2%; margin: 1%">
	<h3>Bio</h3>
	<p><%= @user.bio %></p>
</div>

<% @user.posts.each do |post| %>
<div style="border: solid 5px black; 
						display: flex; 
						flex-direction: column;
						justify-content: space-between; 
						padding: 2%;
						margin: 1%">
	<h3><%= post.title %></h3>
	<p><%= post.text %></p>
</div>
<% end %>